<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/itemCell">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="67dp"
        android:layout_height="100dp"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/a"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/itemNameView"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/itemDescView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="103dp"
        android:text="name" />

    <TextView
        android:id="@+id/itemDescView"
        android:layout_width="304dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_toEndOf="@+id/itemImageView"
        android:layout_weight="1"
        android:text="decp" />

    <TextView
        android:id="@+id/itemPriceView"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/itemNameView"
        android:layout_marginEnd="46dp"
        android:layout_weight="1"
        android:text="price" />


</RelativeLayout>