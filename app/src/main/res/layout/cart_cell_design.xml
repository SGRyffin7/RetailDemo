<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/itemCell">

    <ImageView
        android:id="@+id/cartItemImage"
        android:layout_width="67dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/a" />

    <TextView
        android:id="@+id/cartItemName"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/itemDescView"
        android:layout_toRightOf="@id/cartItemImage"
        android:layout_marginLeft="10dp"
        android:text="name" />


    <TextView
        android:id="@+id/cartItemPrice"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cartItemName"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:text="price" />

    <Button
        android:id="@+id/cartItemDelete"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_toRightOf="@id/cartItemPrice"
        android:text="Delete"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/cartItemDesc"
        android:layout_width="304dp"
        android:layout_height="66dp"
        android:layout_toRightOf="@id/cartItemImage"
        android:layout_below="@id/cartItemDelete"
        android:text="decp"
        android:layout_marginLeft="5dp"/>



</RelativeLayout>